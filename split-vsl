        textarea {
            width: 100%;
            height: 180px;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            margin-bottom: 10px;
            font-size: 16px;
        }
        
        .options {
            margin-bottom: 15px;
        }
        
        .options label {
            margin-right: 15px;
        }
        
        .btn-group {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 15px;
        }
        
        button {
            padding: 10px 20px;
            cursor: pointer;
            background-color: #4a6da7;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
        }
        
        button:hover {
            background-color: #3a5a8c;
        }
        
        .copy-btn {
            margin-top: 5px;
            background-color: #28a745;
        }
        
        .copy-btn:hover {
            background-color: #218838;
        }
        
        .copy-msg {
            color: #28a745;
            text-align: center;
            font-weight: bold;
